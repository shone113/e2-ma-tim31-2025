<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="0dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- Kartica sa zaobljenim uglovima i senkom -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="22dp"
        app:cardElevation="12dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- HEADER sa plavim gradijentom + title + X dugme -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:background="@drawable/bg_dialog_header"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Bronze Chest"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:shadowColor="#40000000"
                    android:shadowDx="0"
                    android:shadowDy="2"
                    android:shadowRadius="3"/>

                <ImageButton
                    android:id="@+id/btnClose"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="end|top"
                    android:background="@drawable/bg_close_round"
                    android:padding="6dp"
                    android:src="@drawable/ic_close"
                    android:tint="@android:color/white"/>
            </FrameLayout>

            <!-- Ikonica/ilustracija -->
            <ImageView
                android:id="@+id/ivArt"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:contentDescription="@null"/>

            <!-- Tekst sa obojenim rečima -->
            <TextView
                android:id="@+id/tvBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:textAlignment="center"
                android:textSize="16sp"/>

            <!-- Kupovno dugme kao na slici (zeleni “pill”, ikonica + cena) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBuy"
                android:layout_width="180dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:text="100"
                android:textAllCaps="false"
                android:textStyle="bold"
                app:cornerRadius="24dp"
                app:icon="@drawable/coin"
                app:iconSize="30dp"
                app:iconPadding="8dp"
                app:iconTint="@null"
                app:iconGravity="textStart"
                app:backgroundTint="#34C759" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp"/>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
