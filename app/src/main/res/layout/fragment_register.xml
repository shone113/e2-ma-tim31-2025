<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:padding="16dp" android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content">

            <EditText android:id="@+id/etEmail" android:hint="Email"
                android:inputType="textEmailAddress" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <EditText android:id="@+id/etPass" android:hint="Lozinka"
                android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <EditText android:id="@+id/etConfirm" android:hint="Potvrdi lozinku"
                android:inputType="textPassword" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <EditText android:id="@+id/etUsername" android:hint="Korisničko ime"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <!-- Za početak: običan Spinner za 5 avatara -->
            <Spinner android:id="@+id/spAvatar" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <Button android:id="@+id/btnRegister" android:text="Registruj se"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <Button android:id="@+id/btnGoLogin" android:text="Već imaš nalog? Prijavi se"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>