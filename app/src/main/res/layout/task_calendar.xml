<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Header: trenutna nedelja -->
    <TextView
        android:id="@+id/tvCurrentWeek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="21 - 27 April"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:background="@android:color/darker_gray"
        android:textColor="@android:color/white" />

    <!-- Horizontalni week picker -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWeekDays"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Glavni dnevni prikaz: H-scroll + V-scroll za obe kolone zajedno -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!-- Ovo je jedini vertikalni skrol za obe kolone -->
            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbars="vertical">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Levi stub sa satima -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvHours"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        android:overScrollMode="never"
                        android:scrollbars="none" />

                    <!-- Desni stub sa taskovima -->
                    <FrameLayout
                        android:id="@+id/flDaySchedule"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:minHeight="2880dp"
                        android:clipChildren="false"
                        android:clipToPadding="false"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </HorizontalScrollView>


    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="16dp"
        app:srcCompat="@android:drawable/ic_input_add"
        app:tint="@android:color/white" />

</LinearLayout>
