<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Naslov -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Izmeni zadatak"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"/>

        <!-- Naziv -->
        <EditText
            android:id="@+id/etNaziv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Naziv zadatka"
            android:minHeight="48dp"
            android:layout_marginBottom="12dp"/>

        <!-- Opis -->
        <EditText
            android:id="@+id/etOpis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Opis (opciono)"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:layout_marginBottom="16dp"/>

        <!-- Vremena izvršenja -->
        <!-- Vremena izvršenja - jedan ispod drugog -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal">

            <!-- Početak -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Početak vremena izvršavanja"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>
            <TimePicker
                android:id="@+id/timePickerStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"/>

            <!-- Kraj -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kraj vremena izvršavanja"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"/>
            <TimePicker
                android:id="@+id/timePickerEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:timePickerMode="spinner"/>
        </LinearLayout>


        <!-- Težina i Bitnost u jednom redu -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginBottom="16dp">

            <!-- Težina -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Težina"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <RadioGroup
                    android:id="@+id/rgTezina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbVeomaLak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Veoma lak - 1 XP" />

                    <RadioButton
                        android:id="@+id/rbLak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lak - 3 XP" />

                    <RadioButton
                        android:id="@+id/rbTezak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Težak - 7 XP" />

                    <RadioButton
                        android:id="@+id/rbEkstremnoTezak"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ekstremno težak - 20 XP" />
                </RadioGroup>
            </LinearLayout>

            <!-- Bitnost -->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bitnost"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <RadioGroup
                    android:id="@+id/rgBitnost"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/rbNormalan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Normalan - 1 XP" />

                    <RadioButton
                        android:id="@+id/rbVazan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Važan - 3 XP" />

                    <RadioButton
                        android:id="@+id/rbEkstremnoVazan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ekstremno važan - 10 XP" />

                    <RadioButton
                        android:id="@+id/rbSpecijalan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Specijalan - 100 XP" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>

        <!-- Dugme za čuvanje izmena -->
        <Button
            android:id="@+id/btnUpdateTask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sačuvaj izmene"
            android:background="@drawable/square_button"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
